<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<!--    create vertical layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_margin="40px"
            android:id="@+id/schoolLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/school_logo" />


        <EditText
            android:layout_margin="40px"
            android:id="@+id/schoolName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="School Name"
            android:inputType="text" />

        <EditText
            android:layout_margin="40px"
            android:id="@+id/principalName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Principal Name"
            android:inputType="text" />

        <EditText
            android:layout_margin="40px"
            android:id="@+id/schoolPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="School Price"
            android:inputType="number" />

<!--        create horisontal layout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_margin="40px"
            android:onClick="onSubmit"
            android:id="@+id/submitBtn" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change logo"
            android:layout_margin="40px"
            android:id="@+id/chLogoBtn"
            android:onClick="changeLogo"
            />
        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>